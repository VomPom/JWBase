<resources>

    <!-- Base application theme. -->
    <style name="JWAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="radioGroupButtonStyle">
        <item name="android:textColor">@drawable/selector_radio_group_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="dialog_loading" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <style name="AppWidget" parent="Theme.AppCompat.Light" />
    <!--交流-->
    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="AppWidget.DeepLine_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.Gap">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>


    <!-- App Dialog Light -->

    <style name="BaseAppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorAccent</item>

    </style>
    <style name="AppAnimation" parent="android:Animation" />
    <style name="AppDialogLight" parent="BaseAppDialogLight" />
    <style name="AppAnimation.BottomSheet">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>
    <style name="AppDialogLight.TopicReply">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>
    <style name="AppDialogLight.Alert">
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">90%</item>
    </style>
    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="toolbarTitleTheme">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <declare-styleable name="ZWCalendarView">
        <attr name="weekHeight" />
        <attr name="weekTextSize" />
        <attr name="weekBackgroundColor" />
        <attr name="weekTextColor" />
        <attr name="calendarTextSize" />
        <attr name="calendarTextColor" />
        <attr name="isShowOtherMonth" format="boolean" />
        <attr name="otherMonthTextColor" format="color" />
        <attr name="isShowLunar" />
        <attr name="lunarTextColor" />
        <attr name="lunarTextSize" />
        <attr name="todayTextColor" />
        <attr name="selectColor" format="color" />
        <attr name="selectTextColor" format="color" />
        <attr name="signIconSuccessId" format="integer" />
        <attr name="signIconErrorId" format="integer" />
        <attr name="signIconSize" format="dimension" />
        <attr name="signTextColor" />
        <attr name="limitFutureMonth" />
    </declare-styleable>
</resources>
